<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Monoton" rel="stylesheet">
    <style>{% include "css/main.css" %}</style>
    <title>{{ title }}</title>
</head>
    <body class="{{ bodyClass }}" >
        <div class="container">

            <header>
                <div class="heading-wrapper">
                    <h1 data-heading="{{ title }}" class="heading">{{ title }}</h1>
                </div>
            </header>

            <div class="about-grid">
                <div class="fact1">
                    <h2 class="page-subtitle" data-heading="{{fact1}}">{{fact1}}</h2>
                     <div class="batmandy"><img src="/images/me-purple.png" /></div>
                    <p class="fact-description">{{fact1Description}}</p>
                </div>

                <p class="description description1">{{generalInfo1}}</p>

                <div class="description description2">{{ content | safe }}</div>


                 <div class="fact2">
                    <div class="jello"><img src="/images/jello.png" /></div>
                    <h2 class="page-subtitle" data-heading="{{fact2}}">{{fact2}}</h2>
                    <p class="fact-description">{{fact2Description}}</p>
                </div>


            </div>




            {% include "nav.njk" %}
            <script>{% include "js/scripts.js" %}</script>
        </div>
    </body>
</html>



